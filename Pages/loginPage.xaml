<Page x:Class="curs_reborn.Pages.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:curs_reborn.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="loginPage">

    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource LoginTextL}" Text="Вход"/>
            <StackPanel Orientation="Horizontal" Margin="10" Width="260">
                <TextBlock Width="50" Text="Логин"/>
                <TextBox x:Name="logBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" Width="260">
                <TextBlock Width="50" Text="Пароль"/>
                <PasswordBox Name="passBox" Width="200"/>
            </StackPanel>
            <Button Content="Войти" Width="200" Margin="10" Click="LogIn"/>
        </StackPanel>
    </Grid>
</Page>
