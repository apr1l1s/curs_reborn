<Page x:Class="curs_reborn.Pages.statementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:curs_reborn.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="920"
      Title="statementPage">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Grid.Column="0"
                    Margin="20,20,0,20" 
                    Width="250">
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FontFamily" Value="/Fonts/#Montserrat"/>
                    <Setter Property="FontSize" Value="18"/>
                </Style>
                
            </StackPanel.Resources>
            <Button Click="fillStatement"
                    Content="Создать" 
                    Margin="10"
                    Style="{StaticResource ButtonTheme}"/>
            <TextBlock Text="Группа"
                       Foreground="White"
                       Margin="10,0,0,0"/>
            <ComboBox x:Name="comboGroups" 
                      Margin="10"
                      Height="30"
                      Style="{StaticResource ComboBoxTheme}"/>
            <TextBlock Text="Семестр"
                       Foreground="White"
                       Margin="10,0,0,0"/>
            <ComboBox x:Name="comboTerm"
                      Margin="10"
                      Height="30"
                      Style="{StaticResource ComboBoxTheme}"/>
            <TextBlock Text="Учебный год"
                       Foreground="White"
                       Margin="10,0,0,0"/>
            <ComboBox x:Name="comboYear" 
                      Margin="10"
                      Style="{StaticResource ComboBoxTheme}"
                      Height="30"/>
            <Button Click="save" 
                    Content="Сохранить" 
                    Margin="10" 
                    Style="{StaticResource ButtonTheme}"/>
            <Button Click="open"
                    Content="Открыть" 
                    Margin="10"
                    Style="{StaticResource ButtonTheme}"/>
            <Button Click="exit" 
                    Content="Назад" 
                    Margin="10" 
                    Style="{StaticResource ButtonTheme}"/>
        </StackPanel>
        <DataGrid x:Name="DG"
                  Grid.Column="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  Style="{StaticResource DataGridTheme}"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия"
                                    MinWidth="100"
                                    Width="*"
                                    Binding="{Binding surname}">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Оценка"
                                    MinWidth="100"
                                    Width="*"
                                    Binding="{Binding mark}">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Тип стипендии"
                                    MinWidth="100"
                                    Width="*"
                                    Binding="{Binding grant}">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Сумма"
                                    MinWidth="100"
                                    Width="*"
                                    Binding="{Binding cost}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
                  
    </Grid>
</Page>
