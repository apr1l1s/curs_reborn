<Window x:Class="curs_reborn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:curs_reborn"
        mc:Ignorable="d"
        Height="600"
        Width="1000"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="Icons/icon.jpg" 
        WindowStartupLocation="Manual">
    <Border Background="White"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="Icons/image.jpg" 
                   Grid.Column="0"
                   Visibility="Visible"
                   Margin="5,5,0,0"/>
            <Frame BorderBrush="#FF293A67"
                   Grid.Row="1"
                   Grid.Column="1"
                   BorderThickness="0"
                   x:Name="frame"
                   NavigationUIVisibility="Hidden"
                   Height="450"
                   Width="800"/>
            <StackPanel Grid.Row="0" 
                        Grid.Column="1" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="Width" Value="20"/>
                        <Setter Property="Height" Value="20"/>
                        <Setter Property="Margin" Value="20"/>
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </StackPanel.Resources>
                <Border MouseLeftButtonDown="mini" 
                        BorderBrush="#FF243C6F"
                        Background="#FF243C6F"
                        BorderThickness="2"
                        Height="4"
                        VerticalAlignment="Bottom"/>
                <Border  MouseLeftButtonDown="close"
                         BorderThickness="2"
                         Background="White"
                         BorderBrush="#FF243C6F"/>
            </StackPanel>
        </Grid>
    </Border>
   
</Window>